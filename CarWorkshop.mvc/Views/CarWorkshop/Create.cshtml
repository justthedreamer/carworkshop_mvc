@using CarWorkshop.Application.CarWorkshop;
@using CarWorkshop.Application.CarWorkshop.Commands.CreateCarWorkshop;

@model CreateCarWorkshopCommand


<h1>Create Car Workshop</h1>

<div class="row">
    <div class="col-md-4">
        <form action="/CarWorkshop/Create" method="post">
            
            <div class="form-group mb-3">
                <label class="control-label mb-1" asp-for="Name">Name</label>
                <input class="form-control" type="text" asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label mb-1" for="Description">Description</label>
                <input class="form-control" type="text" asp-for="Description" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>


            <div class="form-group mb-3">
                <label class="control-label mb-1" for="Name">About</label>
                <input class="form-control" type="text" asp-for="About" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label mb-1" asp-for="PhoneNumber">Phone Number</label>
                <input class="form-control" type="text" asp-for="PhoneNumber" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label mb-1" asp-for="City">City</label>
                <input class="form-control" type="text" asp-for="City" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label mb-1" asp-for="Street">Street</label>
                <input class="form-control" type="text" asp-for="Street" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label mb-1" asp-for="PostalCode">Postal Code</label>
                <input class="form-control" type="text" asp-for="PostalCode" />
                <span asp-validation-for="PostalCode" class="text-danger"></span>

            </div>

            <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}