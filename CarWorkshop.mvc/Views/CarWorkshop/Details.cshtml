@model CarWorkshop.Application.CarWorkshop.CarWorkshopDto

@{
    ViewData["Title"] = "Details";
}

<h1>@Model.Name</h1>


<div class="rating" data-encoded-name="@Model.EncodedName"></div>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.About)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.About)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Street)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Street)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PostalCode)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PostalCode)
        </dd>
    </dl>
</div>

<div class="ratings" id="ratings" data-encoded-name="@Model.EncodedName"></div>

<div>
    @if(Model.IsEditable || User.IsInRole("Moderator"))
    {
        @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ })
    }
    <br />
    @if (!User.IsInRole("Owner"))
    {
    <partial class="row" name="_CreateCarWorkshopRating" model="new CarWorkshop.Application.CarWorkshopRating.Commands.CreateCarWorkshopRatingCommand() { CarWorkshopEncodedName = Model.EncodedName }" />
    }
    <br />
    <a asp-action="Index">Back to List</a>

</div>

<h2 class="mt-4">Services</h2>

<div id="services" class="d-flex flex-wrap gap-2 mt-4 m-0 p-0" data-encoded-name="@Model.EncodedName">
</div>

<h2 class="mt-4">Ratings</h2>

<div id="ratingsSection" class="" data-encoded-name="@Model.EncodedName">
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/CarWorkshop/Details.js"></script>
    <script src="~/js/CarWorkshop/RatingForm.js"></script>
}