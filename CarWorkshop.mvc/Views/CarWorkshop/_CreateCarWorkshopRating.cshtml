@model CarWorkshop.Application.CarWorkshopRating.Commands.CreateCarWorkshopRatingCommand

<!-- Button trigger modal -->
<button id="addNewRateButton" type="button" class="btn btn-primary mt-4" data-bs-toggle="modal" data-bs-target="#createCarWorkshopRating">
    Add new rate
</button>

<!-- Modal -->
<div class="modal fade" id="createCarWorkshopRating" tabindex="-1" aria-labelledby="createCarWorkshopRatingLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="CreateCarWorkshopRating">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Add your opinion</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="CarWorkshopEncodedName" class="form-control" type="hidden" />
                    
                    <div class="form-group">
                        <label asp-for="Rate" class="control-label"></label>
                        <div id="rateInputStars"></div>
                        <input asp-for="Rate" class="starInput" />
                        <span asp-validation-for="Rate" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
